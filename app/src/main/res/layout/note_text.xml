<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

        <TextView
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />


    <TextView
        android:paddingTop="20dp"
        android:id="@+id/note_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="작성된 제목이 없습니다"
        android:gravity="center"
        android:layout_gravity="center"
        android:text=""/>


    <TextView
        android:paddingTop="20dp"
        android:id="@+id/note_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="작성된 내용이 없습니다."
        android:gravity="center"
        android:layout_gravity="center"
        android:text=""/>

    <ImageView
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/note_text_img"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        android:layout_gravity="center">


        <Button
            android:id="@+id/note_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="이전메뉴" />

        <Button
            android:id="@+id/note_rewrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="수정하기" />

        <Button
            android:id="@+id/note_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="삭제하기" />



    </LinearLayout>




</LinearLayout>